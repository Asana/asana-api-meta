{
  "title": "Resource",
  "type": "object",
  "additionalProperties": false,
  "required": ["name", "comment", "properties", "actions"],
  "properties": {
    "templates": { "type": "array" },
    "name": { "type": "string" },
    "comment": { "type": "string" },
    "notes": {
      "type": "array",
      "items": { "type": "string" }
    },
    "properties": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name", "type", "comment", "example_values"],
        "properties": {
          "name": { "type": "string" },
          "type": { "type": "string" },
          "comment": { "type": "string" },
          "notes": {
            "type": "array",
            "items": { "type": "string" }
          },
          "example_values": {
            "type": "array",
            "items": { "type": "string" },
            "length": { "min": 1 }
          },
          "access": { "type": "string" },
          "values": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["name", "comment"],
              "additionalProperties": false,
              "properties": {
                "name": { "type": "string" },
                "comment": { "type": "string" },
                "notes": {
                  "type": "array",
                  "items": { "type": "string" }
                }
              }
            }
          }
        }
      }
    },
    "action_classes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "url"],
        "additionalProperties": false,
        "properties": {
          "name": {"type": "string"},
          "url": {"type": "string"},
          "comment": {"type": "string"}
        }
      }
    },
    "actions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "method", "path", "comment"],
        "additionalProperties": false,
        "properties": {
          "name": { "type": "string" },
          "class": { "type": "string" },
          "method": { "type": "string" },
          "path": { "type": "string" },
          "comment": { "type": "string" },
          "notes": {
            "type": "array",
            "items": { "type": "string" }
          },
          "no_code": { "type": "boolean" },
          "collection": { "type": "boolean" },
          "collection_cannot_paginate": { "type": "boolean" },
          "params": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["name", "type", "comment"],
              "additionalProperties": false,
              "properties": {
                "name": { "type": "string" },
                "type": { "type": "string" },
                "required": { "type": "boolean" },
                "explicit": { "type": "boolean" },
                "comment": { "type": "string" },
                "notes": {
                  "type": "array",
                  "items": { "type": "string" }
                },
                "example_values": {
                  "type": "array",
                  "items": { "type": "string" },
                  "length": { "min": 1 }
                },
                "values": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": ["name", "comment"],
                    "additionalProperties": false,
                    "properties": {
                      "name": { "type": "string" },
                      "comment": { "type": "string" },
                      "notes": {
                        "type": "array",
                        "items": { "type": "string" }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
